@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
	ViewBag.Title = "Create";
	Layout = "/Views/Shared/_Layout.cshtml";
}

@model AutoPoint.ViewModel.UserVM.CreateVM

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
	<div class="container">
		<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
			<div class="col-first">
				<h1>@localizer["Create"]</h1>
				<nav class="d-flex align-items-center">
					<a href="/Home/Index">@localizer["Home"]<span class="lnr lnr-arrow-right"></span></a>
					<a href="/User/AdminPanel?id=@Model.userID">@localizer["Admin panel"]<span class="lnr lnr-arrow-right"></span></a>
					<a href="/User/Create">@localizer["Create"]</a>
				</nav>
			</div>
		</div>
	</div>
</section>
<!-- End Banner Area -->
<!--================Login Box Area =================-->
<section class="login_box_area section_gap">
	<div class="container">
		
		<div class="row">
			<div class="col-lg-12">
				<div class="login_form_inner">
					<h3>@localizer["Create a new user"]</h3>
					<form class="row login_form" action="/User/Create" method="post" id="contactForm" novalidate="novalidate">
						
						<input type="hidden" id="isFirstNameValid" value=""/>
						<input type="hidden" id="isLastNameValid" value=""/>
						<input type="hidden" id="isEmailValid" value=""/>
						<input type="hidden" id="isAddressValid" value=""/>
						<input type="hidden" id="isPasswordValid" value=""/>

						<div class="col-md-12 form-group input-control">
							<input type="text" autocomplete="off" class="form-control" id="firstName" name="model.firstName" placeholder="@localizer["First name"]" onfocus="this.placeholder = ''" onblur="this.placeholder = '@localizer["First name"]'">
							<div class="error"></div>
						</div>
						<div class="col-md-12 form-group input-control">
							<input type="text" autocomplete="off" class="form-control" id="lastName" name="model.lastName"  placeholder="@localizer["Last name"]" onfocus="this.placeholder = ''" onblur="this.placeholder = '@localizer["Last name"]'">
							<div class="error"></div>
						</div>
						<div class="col-md-12 form-group input-control">
							<input type="text" autocomplete="off" class="form-control" id="address" name="model.address" placeholder="@localizer["address"]" onfocus="this.placeholder = ''" onblur="this.placeholder = '@localizer["address"]'">
							<div class="error"></div>
						</div>
						<div class="col-md-12 form-group input-control">
							<input type="text" autocomplete="off" class="form-control" id="email" name="model.email" placeholder="@localizer["Email"]" onfocus="this.placeholder = ''" onblur="this.placeholder = '@localizer["Email"]'">
							<div class="error"></div>
						</div>
						<div class="col-md-12 form-group input-control">
							<input type="password" autocomplete="off" class="form-control" id="password" name="model.password" placeholder="@localizer["Password"]" onfocus="this.placeholder = ''" onblur="this.placeholder = '@localizer["Password"]'">
							<div class="error"></div>
						</div>
						<div class="col-md-12 form-group">
							@localizer["isAdmin"] :<input type="checkbox" class="form-control" id="isAdmin" name="model.isAdmin" value=True placeholder="@localizer["isAdmin"]" onfocus="this.placeholder = ''" onblur="this.placeholder = '@localizer["isAdmin"]'">
						</div>
						<div class="col-md-12 form-group">
						</div>
						<div class="col-md-12 form-group">
							<a href="/User/AdminPanel" class="primary-btn" style="color:white; text-decoration:none;">@localizer["Back"]</a>
							<button type="submit" value="submit" class="primary-btn">@localizer["Create"]</button>
						</div>
					</form>
				</div>
				</div>
		</div>
		
	</div>
</section>
<!--================End Login Box Area =================-->

<script src="~/js/validations/registerValidation.js"></script>