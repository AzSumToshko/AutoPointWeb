@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
	ViewBag.Title = "EditProfile";
	Layout = "/Views/Shared/_Layout.cshtml";
}

@model AutoPoint.ViewModel.UserVM.ChangePasswordVM

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
	<div class="container">
		<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
			<div class="col-first">
				<h1>@localizer["Change Password"]</h1>
			</div>
		</div>
	</div>
</section>
<!-- End Banner Area -->
<!--================Login Box Area =================-->
<section class="login_box_area section_gap section_gap_bottom">
	<div class="container">
		
		<div class="row">
			<div class="col-lg-12">
				<div class="login_form_inner">
					<h3>@localizer["Edit Information"]</h3>
					<form class="row login_form" action="/User/ChangePassword" method="post" id="contactForm" novalidate="novalidate">

						<input type="hidden" value="@Model.ID" name="model.ID"/>

						<input type="hidden" id="isPasswordValid" value=""/>
						<input type="hidden" id="isPassword2Valid" value=""/>

						<div class="col-md-12 form-group input-control">
							<input type="password" autocomplete="off" class="form-control" id="password" name="model.password"placeholder="@localizer["password"]" onfocus="this.placeholder = ''" onblur="this.placeholder = '@localizer["password"]'">
							<div class="error"></div>
						</div>
						<div class="col-md-12 form-group input-control">
							<input type="password" autocomplete="off" class="form-control" id="password2" name="model.password2" placeholder="@localizer["Re-type password"]" onfocus="this.placeholder = ''" onblur="this.placeholder = '@localizer["Re-type password"]'">
							<div class="error"></div>
						</div>
						<div class="col-md-12 form-group">
						</div>
						<div class="col-md-12 form-group">
							<button type="submit" value="submit" class="primary-btn">@localizer["Change"]</button>
						</div>
					</form>
				</div>
				</div>
		</div>
		
	</div>
</section>
<!--================End Login Box Area =================-->

<script src="~/js/validations/changePasswordValidation.js"></script>