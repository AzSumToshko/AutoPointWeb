			<!-- Author Meta -->
			<meta name="author" content="SamuilDobrinski">

			<!-- Meta Keyword -->
			<meta name="keywords" content="">

			<!-- Tab icon -->
			<link rel="shortcut icon" href="~/img/fav.png">

			<!-- meta character set -->
