			<script type="text/javascript" charset="UTF-8" src="https://maps.googleapis.com/maps-api-v3/api/js/50/8/intl/bg_ALL/common.js"></script>
			<script type="text/javascript" charset="UTF-8" src="https://maps.googleapis.com/maps-api-v3/api/js/50/8/intl/bg_ALL/util.js"></script>


    </head>
    <body>

		<!-- Start Header Area -->
		<header class="header_area sticky-header">
			<div class="main_menu">
				<nav class="navbar navbar-expand-lg navbar-light main_box">
					<div class="container">
						<!-- Brand and toggle get grouped for better mobile display -->
						<img src="~/img/logo.png" style="margin-left:15px; margin-top: 15px; margin-bottom: 15px;" width="250px" height="50px" alt="">
						<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
						 aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
						<!-- Collect the nav links, forms, and other content for toggling -->
						<div class="collapse navbar-collapse offset" id="navbarSupportedContent">
							<ul class="nav navbar-nav menu_nav ml-auto" style="margin-left:20px">

								<li class="nav-item submenu dropdown">
									<a href="/Product/Index" class="nav-link" data-toggle="dropdown" role="button" aria-haspopup="true"
									 aria-expanded="false">@localizer["Languages"]</a>
									<ul class="dropdown-menu">
										<li class="nav-item"><a class="nav-link" href="/Home/CultureManagement?culture=en">@localizer["English"]</a></li>
										<li class="nav-item"><a class="nav-link" href="/Home/CultureManagement?culture=bg">@localizer["Bulgarian"]</a></li>
										<li class="nav-item"><a class="nav-link" href="/Home/CultureManagement?culture=ru">@localizer["Russian"]</a></li>
									</ul>
								</li>

								<!-- Home -->
								<li class="nav-item"><a class="nav-link" href="/Home/Index">@localizer["Home"]</a></li>

								<!-- Products -->
								<li class="nav-item submenu dropdown">
									<a href="/Product/Index" class="nav-link" data-toggle="dropdown" role="button" aria-haspopup="true"
									 aria-expanded="false">@localizer["Products"]</a>
									<ul class="dropdown-menu">
										<li class="nav-item"><a class="nav-link" href="/Product/Index">@localizer["All items"]</a></li>
										<li class="nav-item"><a class="nav-link" href="/Product/Index?category=Race chips">@localizer["Race chips"]</a></li>
										<li class="nav-item"><a class="nav-link" href="/Product/Index?category=Car interior">@localizer["Car interior"]</a></li>
										<li class="nav-item"><a class="nav-link" href="/Product/Index?category=Exhaust system">@localizer["Exhaust systems"]</a></li>
										<li class="nav-item"><a class="nav-link" href="/Product/Index?category=Gear boxes">@localizer["Gear boxes"]</a></li>
										<li class="nav-item"><a class="nav-link" href="/Product/Index?category=Engine parts">@localizer["Engine parts"]</a></li>
									</ul>
								</li>

								<li class="nav-item"><a class="nav-link" href="/Home/DTCReader?errorCode=None">@localizer["DTC Reader"]</a></li>

								<li class="nav-item"><a class="nav-link" href="/Home/EngineSpecifications">@localizer["Engine specs"]</a></li>

								<!-- contact -->
								<li class="nav-item"><a class="nav-link" href="/Email/Contact">@localizer["Contact"]</a></li>
								
								<!-- account -->
								<li class="nav-item submenu dropdown"> 
									<a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
									 aria-expanded="false">@localizer["Account"]</a>
									<ul class="dropdown-menu">
										@if(User.Identity.Name == null)
										{
											<li class="nav-item"><a class="nav-link" href="/User/Login">@localizer["Login"]</a></li>
											<li class="nav-item"><a class="nav-link" href="/User/Register">@localizer["Register"]</a></li>
										}
										else
										{
											<li class="nav-item"><a class="nav-link" href="/User/Profile">@localizer["Profile"]</a></li>
											@if(User.Identity.Name.Equals("Admin")){
												<li class="nav-item"><a class="nav-link" href="/User/AdminPanel">@localizer["Admin panel"]</a></li>
											}
											<li class="nav-item"><a class="nav-link" href="/User/Logout">@localizer["Logout"]</a></li>
										}

									</ul>
								</li>
								
							</ul>
							<!-- cart i search -->
							<ul class="nav navbar-nav navbar-right">
								<li class="nav-item">
								</li>
								<li class="nav-item">
									<button class="search" style="padding-right:15px"><a href="/User/Cart" class="cart"><span class="ti-bag"></span></a></button>
									<button class="search"><span class="lnr lnr-magnifier" id="search"></span></button>
								</li>
							</ul>
						</div>
					</div>
				</nav>
			</div>
			<div class="search_input" id="search_input_box">
			<div class="container">
				<form class="d-flex justify-content-between" action="/Product/Index">
					<input type="text" autocomplete="off" class="form-control" name = "searchInput" id="searchInput" placeholder="@localizer["Search Here"]">
					<button type="submit" class="btn"></button>
					<span class="lnr lnr-cross" id="close_search" title="Close Search"></span>
				</form>
			</div>
			</div>
		</header>
		<!-- END Header Area -->

			@RenderBody()

		<!-- start footer Area -->
		<footer class="footer-area section_gap">
			<div class="container">
			<div class="row">
				<div class="col-lg-9  col-md-6 col-sm-6">
					<div class="single-footer-widget">
						<h6>@localizer["About Us"]</h6>
						<p style="color: white">
							@localizer["Auto point is a new site focusing on selling auto parts."]
						</p>
					</div>
				</div>
				<div class="col-lg-3 col-md-6 col-sm-6">
					<div class="single-footer-widget">
						<h6>@localizer["Follow Us"]</h6>
						<p style = "color:white">@localizer["Let us be social"]</p>
						<div class="footer-social d-flex align-items-center">
							<a href="https://www.facebook.com/samuil.dobrinski" target="_blank"><i class="fa fa-facebook"></i></a>
							<a href="https://twitter.com/DobrinskiSamuil" target="_blank"><i class="fa fa-twitter"></i></a>
							<a href="https://www.instagram.com/samuil._d" target="_blank"><i class="fa fa-instagram"></i></a>
						</div>
					</div>
				</div>
			</div>
			</div>
		</footer>
		<!-- End footer Area -->
